&FORCE_EVAL
  &DFT
    &QS
      METHOD GPW
    &END QS
    &KPOINTS
       SCHEME  MONKHORST-PACK  2 2 1
    &END KPOINTS
    &XC
      &XC_FUNCTIONAL PBE
      &END XC_FUNCTIONAL
    &END XC
    &SCF
      SCF_GUESS ATOMIC
      MAX_SCF  1
      &MIXING
          METHOD DIRECT_P_MIXING
          ALPHA   0.40
      &END
    &END SCF
    &PRINT
      &KS_CSR_WRITE
        BINARY .TRUE.
        THRESHOLD 1.0E-4
        REAL_SPACE .TRUE.
      &END
    &END
    BASIS_SET_FILE_NAME BASIS_MOLOPT
  &END DFT
  &SUBSYS
    &KIND B
      BASIS_SET SZV-MOLOPT-SR-GTH
      POTENTIAL GTH-PBE
    &END KIND
    &KIND N
      BASIS_SET SZV-MOLOPT-SR-GTH
      POTENTIAL GTH-PBE
    &END KIND
    &TOPOLOGY
    &END
    &CELL
      ABC 4.3483    5.0209    15.0
    &END CELL
    &COORD
     SCALED
     N    0.0000    0         0
     B    0.3333    0         0
     N    0.5000    0.2500    0
     B    0.8333    0.2500    0
     N    0.0000    0.5000    0
     B    0.3333    0.5000    0
     N    0.5000    0.7500    0
     B    0.8333    0.7500    0
    &END COORD
  &END SUBSYS
  STRESS_TENSOR ANALYTICAL
&END FORCE_EVAL
&GLOBAL
  PROJECT BN
  RUN_TYPE energy
  PRINT_LEVEL MEDIUM
&END GLOBAL
